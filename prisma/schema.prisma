generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- MODELO DE USUARIO ---
model User {
  id                String            @id @default(uuid())
  name              String?
  email             String            @unique
  password          String            
  image             String?
  
  transacciones      Transaccion[]
  itemsEstrategicos EstrategicoItem[]

  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}

// --- MODELO DE TRANSACCIONES ---
model Transaccion {
  id            String   @id @default(uuid())
  nombre        String
  monto         Float
  tipo          String   // "INGRESO" o "GASTO"
  clasificacion String   // "VIDA", "ACTIVO", "PASIVO"
  metodo        String   @default("EFECTIVO") // <--- NUEVO CAMPO AGREGADO
  fecha         DateTime @default(now())
  completado    Boolean  @default(true)
  notas         String?
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- MODELO PARA EL RESUMEN ESTRATÃ‰GICO ---
model EstrategicoItem {
  id        String   @id @default(uuid())
  nombre    String
  monto     Float    
  subMonto  Float?   @default(0) 
  seccion   String   // "ingresos", "gastos", "activos", "pasivos"
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}