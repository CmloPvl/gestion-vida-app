generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- MODELO DE USUARIO ---
// Es el corazón del sistema. Todo lo que registres colgará de aquí.
model User {
  id                String            @id @default(uuid())
  name              String?
  email             String            @unique
  password          String            // Almacenaremos el hash de la clave
  image             String?
  
  // Relaciones: Si borras el usuario, se borra su info (Cascade)
  transacciones     Transaccion[]
  itemsEstrategicos EstrategicoItem[]

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

// --- MODELO DE TRANSACCIONES (Tu tabla original mejorada) ---
model Transaccion {
  id            String   @id @default(uuid())
  nombre        String
  monto         Float
  tipo          String
  clasificacion String
  fecha         DateTime @default(now())
  completado    Boolean  @default(true)
  notas         String?
  
  // Vínculo obligatorio con un Usuario
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- MODELO PARA EL RESUMEN ESTRATÉGICO ---
// Para guardar Ingresos, Gastos de vida, Activos y Pasivos de forma permanente
model EstrategicoItem {
  id        String   @id @default(uuid())
  nombre    String
  monto     Float    // Valor total (ej: valor de la propiedad o deuda total)
  subMonto  Float?   @default(0) // Flujo mensual (ej: arriendo que recibes o cuota que pagas)
  seccion   String   // "ingresos", "gastos", "activos", "pasivos"
  
  // Vínculo obligatorio con un Usuario
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}