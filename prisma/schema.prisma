generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- MODELO DE USUARIO ---
model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  password      String
  image         String?
  
  emailVerified DateTime? 
  
  transacciones     Transaccion[]
  itemsEstrategicos  EstrategicoItem[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // @@map eliminado para que coincida con la tabla 'User' en Supabase
}

// --- MODELO PARA TOKENS DE VERIFICACIÓN ---
model VerificationToken {
  id      String   @id @default(uuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  // @@map eliminado
}

// --- MODELO DE TRANSACCIONES ---
model Transaccion {
  id            String   @id @default(uuid())
  nombre        String
  monto         Float
  tipo          String   
  clasificacion String   
  metodo        String   @default("EFECTIVO")
  fecha         DateTime @default(now())
  completado    Boolean  @default(true)
  notas         String?
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // @@map eliminado para que coincida con la tabla 'Transaccion' que ya tiene datos
}

// --- MODELO PARA EL RESUMEN ESTRATÉGICO ---
model EstrategicoItem {
  id        String   @id @default(uuid())
  nombre    String
  monto     Float    
  subMonto  Float?   @default(0) 
  seccion   String   
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // @@map eliminado para evitar conflictos de nombres
}