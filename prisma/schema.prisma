generator client {
  provider      = "prisma-client-js"
  engineType    = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- MODELO DE USUARIO ---
model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  password      String
  image         String?
  
  // --- CAMPOS PARA SaaS PROFESIONAL ---
  // Si es null, el usuario no ha verificado su cuenta.
  emailVerified DateTime? 
  
  // Relaciones existentes
  transacciones      Transaccion[]
  itemsEstrategicos  EstrategicoItem[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// --- MODELO PARA TOKENS DE VERIFICACIÓN ---
// Esencial para validar que el correo realmente existe antes de dar acceso.
model VerificationToken {
  id      String   @id @default(uuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

// --- MODELO DE TRANSACCIONES ---
model Transaccion {
  id            String   @id @default(uuid())
  nombre        String
  monto         Float
  tipo          String   // "INGRESO" o "GASTO"
  clasificacion String   // "VIDA", "ACTIVO", "PASIVO"
  metodo        String   @default("EFECTIVO")
  fecha         DateTime @default(now())
  completado    Boolean  @default(true)
  notas         String?
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- MODELO PARA EL RESUMEN ESTRATÉGICO ---
model EstrategicoItem {
  id        String   @id @default(uuid())
  nombre    String
  monto     Float    
  subMonto  Float?   @default(0) 
  seccion   String   // "ingresos", "gastos", "activos", "pasivos"
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}